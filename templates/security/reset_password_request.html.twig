{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center my-3">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">Veuillez vous connecter</div>
					<div class="card-body">
						<h1>Réinitialisation mot de passe</h1>
						{{form_start(requestPassForm)}}
							{{form_row(requestPassForm.email)}}
							<button type="submit" class="btn my-3 btn-primary">ENVOYER</button>
						{{form_end(requestPassForm)}}
						
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
