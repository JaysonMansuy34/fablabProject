{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}
{% block body %}
	{% include "admin/partial/_navBarAdmin.html.twig" %}
	<div class="container mt-5">
		<h1 class="mb-4">Utilisateur</h1>

		<div class="table-responsive">
			<table class="table table-hover">
				<thead class="table-dark">
					<tr>
						<th>Id</th>
						<th>Email</th>
						<th>Roles</th>
						<th>Is Verified</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles|join(', ')|replace({'ROLE_': ''}) }}</td>

							<td>
								{% if user.isVerified %}
									<span class="badge bg-success">Oui</span>
								{% else %}
									<span class="badge bg-danger">Non</span>
								{% endif %}
							</td>
							<td>
								<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">Show</a>
								<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7">No records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<a href="{{ path('app_user_new') }}" class="btn btn-success">Create New</a>
	</div>




{% endblock %}
