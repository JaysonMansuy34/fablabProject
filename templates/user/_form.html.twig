{# user/_form.html.twig #}

{{ form_start(form) }}

{% for choice in form.roles %}
    <div class="form-group">
        <div class="form-check">
            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(choice, choice.vars.label, {'label_attr': {'class': 'form-check-label'}}) }}
        </div>
    </div>
{% endfor %}

<div class="form-group">
    {{ form_label(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    <div class="form-check form-switch">
        {{ form_widget(form.is_verified, {
            'id': 'isVerifiedSwitch', 
            'attr': {
                'class': 'form-check-input',
                'role': 'switch',
                'disabled': true  
            }
        }) }}
        {{ form_label(form.is_verified, 'Vérifié', { 
            'label_attr': {'class': 'form-check-label', 'for': 'isVerifiedSwitch'}
        }) }}
    </div>
</div>


<div class="form-group">
    {{ form_label(form.password) }}
    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    {{ form_label(form.resetToken) }}
    {{ form_widget(form.resetToken, {'attr': {'class': 'form-control'}}) }}
</div>

<button class="btn btn-success btn-lg" >{{ button_label|default('Save') }}</button>
<a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-lg">Retourner dashbord user</a>


{{ form_end(form) }}

