{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet" href={{ asset('styles/user/user.css') }}>
{% endblock %}
{% block body %}
	{% include "admin/partial/_navBarAdmin.html.twig" %}
	<div class="user-details-container">
		<h1>User Details</h1>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles|join(', ')|replace({'ROLE_': ''}) }}</td>

				</tr>
				<tr>
					<th>Is Verified</th>
					<td>
						<div class="form-check form-switch">
							<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheck{{ user.id }}" {{ user.isVerified ? 'checked' : '' }} disabled>
							<label class="form-check-label" for="flexSwitchCheck{{ user.id }}">{{ user.isVerified ? 'Verified' : 'Not Verified' }}</label>
						</div>
					</td>

				</tr>
			</tbody>
		</table>
		<a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
